{
  "compilerOptions": {
      "module": "esnext",
      "target": "es2022",
      "moduleResolution": "node",
      "outDir": "dist",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "strict": true,
      "skipLibCheck": true,
      "sourceMap": true,
  },
  "include": ["src/**/*", "services/*"],
  "exclude": ["node_modules"]
}