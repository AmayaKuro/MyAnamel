{
  "compilerOptions": {
      "module": "esnext",
      "target": "es2022",
      "moduleResolution": "Node",
      "outDir": "dist",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "strict": true,
      "skipLibCheck": true,
  },
  "include": ["src/**/*", "src/index.ts"],
  "exclude": ["node_modules"]
}